                            <select id="inp_vid_sporta" class="form-select" name="vid_sporta" dmx-bind:value="data_detail1.data.vid_sporta" dmx-bind:options="sc_vid_sporta.data.query_vid_sporta" optiontext="vid_sporta" optionvalue="vid_sporta_sis">
