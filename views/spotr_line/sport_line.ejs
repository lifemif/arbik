                            <label for="inp_stratery" class="col-form-label-sm">Stratery</label>
                            <select id="inp_stratery" class="form-select form-select-sm" name="stratery" dmx-bind:value="data_detail1.data.stratery" dmx-bind:options="sc_strategu.data.query" optiontext="strategi" optionvalue="strategi_sis">
                            </select>
                        </div>
                        <div class="form-group mb-3">
                            <label for="inp_vid_stsvki" class="col-form-label-sm">Vid stsvki</label>
                            <select id="inp_vid_stsvki" class="form-select form-select-sm" name="vid_stsvki" dmx-bind:value="data_detail1.data.vid_stsvki" dmx-bind:options="sc_vid_stavki.data.query" optiontext="vid_stavki" optionvalue="vid_stavki_sis">
