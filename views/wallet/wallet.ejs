<dmx-serverconnect id="sc_wallet" url="/api/wallet/get_wallet" dmx-param:uuid="filter_uuid.value" dmx-param:bukmaker="filter_bukmaker.value" dmx-param:starting_data="filter_data.value" dmx-param:status="filter_vid_dvigenia.value"></dmx-serverconnect>
<dmx-serverconnect id="sc_bukmaker" url="/api/setting/bukmaker/get_bukmaker"></dmx-serverconnect>
<div class="container">
    <div class="row">
        <div class="col">
            <button id="btn_new_wallet" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal_new_wallet">New</button>
        </div>
    </div>
</div><!-- Wappler include head-page="layouts/main" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="wallet" appConnect="local" components="{dmxBootstrap5TableGenerator:{},dmxFormatter:{},dmxBootstrap5Modal:{},dmxNotifications:{}}" -->


<div class="container" id="filter">
    <div class="row">
        <div class="col-xxl col-sm-6 col-lg-3">
            <h6 class="text-xxl-center">Starting data</h6>
            <input id="filter_data" name="filter_data" type="datetime-local" class="form-control form-control-sm">
        </div>
        <div class="col-xxl col-sm-6 col-lg-3">
            <h6 class="text-xxl-center">Bookmaker</h6>
            <select id="filter_bukmaker" class="form-select form-select-sm" dmx-bind:options="sc_bukmaker.data.query" optiontext="bukamaker" optionvalue="bukmaker_sis">
                <option selected="" value=""></option>
            </select>
        </div>
        <div class="col-xxl col-sm-6 col-lg-3">
            <h6 class="text-xxl-center">UUID</h6>
            <input id="filter_uuid" name="filter_uuid" type="text" class="form-control form-control-sm">
        </div>


        <div class="col-xxl col-sm-6 col-lg-3">
            <h6 class="text-xxl-center">Money movement</h6>
            <select id="filter_vid_dvigenia" class="form-select form-select-sm">
                <option selected="" value=""></option>
                <option value="Withdrawing money">Withdrawing money</option>
                <option value="Пополнение">Пополнение</option>
                <option value="Остаток">Остаток</option>
            </select>
        </div>
    </div>
</div>
<div class="modal" id="modal_new_wallet" is="dmx-bs5-modal" tabindex="-1" nocloseonclick="true">
    <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h6 class="modal-title text-light">New money movement</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form is="dmx-serverconnect-form" id="form_new_wallet" method="post" action="/api/wallet/new_wallet" dmx-generator="bootstrap5" dmx-form-type="vertical">
                    <div class="form-group mb-3">
                        <label for="inp_Vid_dvigenia">Vid dvigenia</label>
                        <select id="inp_Vid_dvigenia" class="form-select" name="Vid_dvigenia">
                            <option value=""></option>
                            <option value="Withdrawing money">Withdrawing money</option>
                            <option value="3">Option Three</option>
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label for="inp_bukmaker">Bukmaker</label>
                        <select id="inp_bukmaker" class="form-select" name="bukmaker">
                            <option value="1">Option One</option>
                            <option value="2">Option Two</option>
                            <option value="3">Option Three</option>
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label for="inp_currency">Currency</label>
                        <select id="inp_currency" class="form-select" name="currency">
                            <option value="1">Option One</option>
                            <option value="2">Option Two</option>
                            <option value="3">Option Three</option>
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label for="inp_summ_curerency">Summ curerency</label>
                        <input type="text" class="form-control" id="inp_summ_curerency" name="summ_curerency" aria-describedby="inp_summ_curerency_help" placeholder="Enter Summ curerency">
                    </div>
                    <div class="form-group mb-3">
                        <label for="inp_curse">Curse</label>
                        <input type="text" class="form-control" id="inp_curse" name="curse" aria-describedby="inp_curse_help" placeholder="Enter Curse">
                    </div>
                    <div class="form-group mb-3">
                        <label for="inp_description">Description</label>
                        <input type="text" class="form-control" id="inp_description" name="description" aria-describedby="inp_description_help" placeholder="Enter Description">
                    </div>
                    <div class="form-group mb-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary btn-sm" dmx-on:click="form_new_wallet.submit()">Save changes</button>
            </div>
        </div>
    </div>
</div>
<div class="container">

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>User uuid</th>
                        <th>Money uuid</th>
                        <th>Data time</th>
                        <th>Vid dvigenia</th>
                        <th>Bukmaker</th>
                        <th>Currency</th>
                        <th>Summ curerency</th>
                        <th>Curse</th>
                        <th>Summa</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody is="dmx-repeat" dmx-generator="bs5table" dmx-bind:repeat="sc_wallet.data.query" id="tb_wallet">
                    <tr>
                        <td dmx-text="id"></td>
                        <td dmx-text="user_uuid"></td>
                        <td dmx-text="money_uuid"></td>
                        <td dmx-text="data_time"></td>
                        <td dmx-text="Vid_dvigenia"></td>
                        <td dmx-text="bukmaker"></td>
                        <td dmx-text="currency"></td>
                        <td dmx-text="summ_curerency"></td>
                        <td dmx-text="curse"></td>
                        <td dmx-text="summa"></td>
                        <td dmx-text="description"></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


<dmx-notifications id="notifies1"></dmx-notifications>

<meta name="ac:route" content="/wallet/wallet">