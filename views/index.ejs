<dmx-serverconnect id="sc_identificat" url="/api/user/identification" noload></dmx-serverconnect>
<div class="container mb-0">
    <form method="post" is="dmx-serverconnect-form" id="serverconnectform1" action="/api/user/login" dmx-on:success="sc_identificat.load();browser1.goto('/dashbord')" dmx-on:unauthorized="notifies1.danger('Логин и пароль не верены');serverconnectform1.reset()">
        <div class="row row-cols-6 align-items-center">
            <div class="col-12 d-flex flex-column justify-content-center align-items-center">
                <h4>Вход в систему</h4>
                <input id="login" name="login" type="text" class="form-control mb-3" placeholder="Логин" required="" data-msg-required="Обязательное поле логин!">
                <input id="password" name="password" type="password" class="form-control mb-2" placeholder="Пароль" required="" data-msg-required="Обязательное поле пароль!">
            </div>
            <div class="col-12 d-flex flex-row justify-content-between">
                <button id="btn2" class="btn btn-sm" dmx-on:click="browser1.goto('/registration')">Регистрация</button>
                <button id="btn1" class="btn btn-primary btn-sm" type="submit">Вход </button>
            </div>
        </div>
    </form>
</div>
